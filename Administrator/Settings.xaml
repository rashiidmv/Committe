<UserControl x:Class="Administrator.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administrator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="DefaultTemplate">
            <StackPanel Orientation="Horizontal">
                <Button Width="16" Margin="0,0,4,0" Content="X" DockPanel.Dock="Right" FontWeight="Bold" Foreground="Red"
                        Command="{Binding DataContext.DeleteCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
                        CommandParameter="{Binding}"/>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="CategoryListTemplate">
            <StackPanel Orientation="Horizontal">
                <Button Width="16" Margin="0,0,4,0" Content="X" DockPanel.Dock="Right" FontWeight="Bold" Foreground="Red"
                        Command="{Binding DataContext.DeleteCategoryCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
                        CommandParameter="{Binding}"/>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="0" Margin="8,8,8,8">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                <Button Command="{Binding AddAreaCommand}" Content="Save" Width="100" DockPanel.Dock="Right" Margin="0,8,0,8"/>
                <TextBlock TextWrapping="Wrap" Text="New Area" Margin="0,8,20,8"/>
                <TextBox Text="{Binding AreaText,UpdateSourceTrigger=PropertyChanged}" Margin="0,8,20,8"/>
            </DockPanel>
            <ListBox ItemTemplate="{StaticResource DefaultTemplate}" ItemsSource="{Binding AreaList}" SelectedValuePath="Id" Margin="0,8,0,8"/>
        </DockPanel>
        <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="1" Margin="8,8,8,8">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                <Button Command="{Binding AddCategoryCommand}" Content="Save" Width="100" DockPanel.Dock="Right" Margin="0,8,0,8"/>
                <TextBlock TextWrapping="Wrap" Text="New Category" Margin="0,8,20,8"/>
                <TextBox Text="{Binding CategoryText,UpdateSourceTrigger=PropertyChanged}" Margin="0,8,20,8"/>
            </DockPanel>
            <ListBox ItemTemplate="{StaticResource CategoryListTemplate}" ItemsSource="{Binding CategoryList}" SelectedValuePath="Id" Margin="0,8,0,8"/>
        </DockPanel>
    </Grid>
</UserControl>
